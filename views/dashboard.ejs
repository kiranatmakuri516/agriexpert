    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: url("bg4.jpg");
            background-size: cover;
            /* background-color: #fff; */
        }

        .side-navbar {
            width: 200px;
            height: 100%;
            position: fixed;
            margin-left: -300px;
            background: rgba(255, 255, 255, 0.192);
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.231);
            /* background-color: #100901; */
            /* background: rgb(2, 0, 36); */
            /* background: linear-gradient(180deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%); */
            transition: 0.5s;
        }

        .nav-link:active,
        .nav-link:focus,
        .nav-link:hover {
            background-color: #ffffff26;
        }

        .my-container {
            transition: 0.4s;
        }

        .active-nav {
            margin-left: 0;
        }

        .active-cont {
            margin-left: 200px;
        }

        #menu-btn {
            background-color: #010531;
            color: #fff;
            margin-left: -62px;
        }

        .my-container input {
            border-radius: 2rem;
            padding: 2px 20px;
        }

        a {
            text-decoration: none;
            color: white;
        }

        a:hover {
            color: white;
            text-shadow: 0px 0px 5px white;
        }

        .dark-mode {
            background-color: black;
            color: white;
        }

        .textbox {
            width: 90%;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.331);
        }

        .askbtn {
            background-color: rgba(0, 212, 255, 1);
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.331);
        }
    </style>
